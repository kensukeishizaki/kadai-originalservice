<% if current_user.wish?(attraction) %>
  <%= form_tag(wish_path(attraction.id), method: :delete) do %>
    <%= hidden_field_tag :attraction_id, attraction.id %>
    <%= submit_tag 'やめる！', class: 'btn btn-danger' %>
  <% end %>
<% else %>
  <%= form_tag(wishes_path) do %>
    <%= hidden_field_tag :attraction_id, attraction.id %>
    <%= submit_tag '行きたい！', class: 'btn btn-primary' %>
  <% end %>
<% end %>